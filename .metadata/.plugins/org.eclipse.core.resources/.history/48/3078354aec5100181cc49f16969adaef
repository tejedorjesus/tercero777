
public class Menu extends Plato{
	private String NombrePlato="";

	private String Ingrediente1="";
	private String Ingrediente2="";
	private String Ingrediente3="";
	
	final Integer PrecioIngerdiente=2;
	private Integer PrecioTotal=0;
	



	public Menu(String ingrediente1, String ingrediente2, String ingrediente3, String nombrePlato, Integer PrecioIngerdiente,Integer PrecioTotal ) {
		super();
		
		Ingrediente1 = ingrediente1;
		Ingrediente2 = ingrediente2;
		Ingrediente3 = ingrediente3;
		NombrePlato = nombrePlato;
		
	}


	public String getNombrePlato() {
		return NombrePlato;
	}


	public void setNombrePlato(String nombrePlato) {
		NombrePlato = nombrePlato;
	}


	public String getIngrediente1() {
		return Ingrediente1;
	}


	public void setIngrediente1(String ingrediente1) {
		Ingrediente1 = ingrediente1;
	}


	public String getIngrediente2() {
		return Ingrediente2;
	}


	public void setIngrediente2(String ingrediente2) {
		Ingrediente2 = ingrediente2;
	}


	public String getIngrediente3() {
		return Ingrediente3;
	}


	public void setIngrediente3(String ingrediente3) {
		Ingrediente3 = ingrediente3;
	}


	public Integer getPrecioTotal() {
		return PrecioTotal;
	}


	public void setPrecioTotal(Integer precioTotal) {
		PrecioTotal = precioTotal + PrecioIngerdiente;
	}


	public Integer getPrecioIngerdiente() {
		return PrecioIngerdiente;
	}


	@Override
	public String toString() {
		return  NombrePlato + "[Ingrediente1=" + Ingrediente1 + ", Ingrediente2=" + Ingrediente2 + ", Ingrediente3="
				+ Ingrediente3 + ", PrecioIngerdiente=" + PrecioIngerdiente + 
				", NombrePlato=" + NombrePlato +  "Precio Total " + PrecioTotal+ "]";
	}
	
		
	}

